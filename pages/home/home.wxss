@import '/style/weui.wxss';
/* @import '/style/zanui.wxss'; */


swiper {
  height: 380rpx;
}

swiper-item, swiper-item image {
  width: 100%;
  height: 300rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.picPre{width:100%;margin:0 auto;position:relative;box-sizing:border-box;}
.picPre image{width:100%;height:100%rpx;}

.horizontal {
  display: block;
  text-align: center;
}

.horizontal .tag {
  border-radius: 10rpx;
  border: 3rpx solid #3688ff;
  background: #118fff;
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  vertical-align: middle;
  padding: 4px;
  line-height: 1rem;
}