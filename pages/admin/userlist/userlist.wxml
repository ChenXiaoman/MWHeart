<view class="page">
  <view class="weui-panel__bd">
    <block wx:if="{{userList.length > 0}}">
      <navigator class="weui-media-box weui-media-box_text" wx:for="{{userList}}" wx:key="userItem" url="../../user/user">
        <view class="weui-media-box__title weui-media-box__title_in-text">
          {{item.realName}}</view>
        <view class="weui-media-box__desc">{{item.phone}}</view>
        <view class="weui-media-box__info">
          <view class="weui-media-box__info__meta weui-media-time">Date：{{item.updatedAt}}</view>

          <view class="weui-media-box__info__meta weui-media-box__info__operate">
            <button class="del weui-btn mini-btn" type="default" size="mini" catchtap="deleteUser" data-id="{{item.objectId}}">delete</button>
            <button class="edit weui-btn mini-btn" type="default" size="mini" catchtap="toModifyUser" data-id="{{item.objectId}}" data-name="{{item.realName}}" data-phone="{{item.phone}}">edit</button>
          </view>
        </view>
      </navigator>
    </block>
    <block wx:else>
            <view class="weui-media-box weui-media-box_text">
              <view class="weui-media-box__title weui-media-box__title_in-text">
                暂无内容</view>
              <view class="weui-media-box__desc"></view>
            </view>
          </block>
  </view>
</view>


<!-- Modify User Panel -->
<view class="notice" id="notice" style="opacity: 1;" wx:if="{{isModifyUser}}">
  <view class='box'>
    <view class="weui-mask"></view>
    <view class="weui-dialog weui-skin_android">
      <view class="weui-dialog__hd">
        <strong class="weui-dialog__title">Edit User</strong>
      </view>
      <form bindsubmit="modifyUser">
        <view class="weui-dialog__bd">
          <view class="weui-cells__title">Name</view>
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__bd">
                <input class="weui-input" name="name" value="{{nowName}}" />
              </view>
            </view>
          </view>

          <view class="weui-cells__title">Phone</view>
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__bd">
                <input class="weui-input" name="phone" value="{{nowPhone}}" />
              </view>
            </view>
          </view>
        </view>
        <view class="weui-btn-area">
          <button class="weui-btn" type="default" bindtap="noneWindows">Cancel</button>
          <button class="weui-btn" type="default" formType="submit">Submit</button>
        </view>
      </form>
    </view>
  </view>
</view>


<include src="../../../utils/alert/alert.wxml" />
