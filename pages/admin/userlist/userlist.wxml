<view class="page">
  <view class="weui-panel__bd">
    <block wx:if="{{userList.length > 0}}">
      <navigator class="weui-media-box weui-media-box_text" wx:for="{{userList}}" wx:key="userItem" url="../../user/user">
        <view class="weui-media-box__title weui-media-box__title_in-text">
          {{item.realName}}</view>
        <view class="weui-media-box__desc">{{item.phone}}</view>
        <view class="weui-media-box__info">
          <view class="weui-media-box__info__meta weui-media-time">Date：{{item.updatedAt}}</view>

          <view class="weui-media-box__info__meta weui-media-box__info__operate">
            <button class="del weui-btn mini-btn" type="default" size="mini" catchtap="deleteUser" data-id="{{item.objectId}}">delete</button>
            <button class="edit weui-btn mini-btn" type="default" size="mini" catchtap="toModifyUser" data-id="{{item.objectId}}" data-name="{{item.realName}}" data-status="{{item.phone}}">edit</button>
          </view>
        </view>
      </navigator>
    </block>
  </view>
</view>



