@import '/style/weui.wxss';

.weui-media-box__info__operate{
  float:right;
  color:#1e1e1e;
  padding-right:0em;

}
.weui-media-box__info__operate .del{
  margin-right: 10px;
}


.weui-media-box{
  padding-bottom: 0px;
}
.weui-media-time{
  width:280rpx;
  height: 1em;
  overflow: hidden;
}

.weui-cells__title{
  text-align: left;
}

.weui-cells {
  border:1px solid #3891f8;
}
.weui-cells__title{
  padding-left: 0px;
  color:#1e1e1e;
}


.searchbar-result{
  border:none;
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}

   .box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 80%;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 0 50px rgba(22,22,22,.35);
  transform: translate3d(0,0,0);
}
.box-hd {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  border-bottom: 1px solid #eee;
}
.box-title {
  font-size: 13pt;
}
.box-close {
  position: absolute;
  right: 20rpx;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}
.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx 30rpx;
}
.notice {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}  
