<loading hidden="{{!loading}}">
  loading...
</loading>
<view class="page">
  <view class="page__desc">Event Information</view>

  <view class="page__bd">
    <view class="weui-form-preview__hd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">Event Name</view>
        <view class="weui-form-preview__value">MWH (Moral Welfare Home)</view>
      </view>
    </view>
    <view class="weui-form-preview__bd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">Date</view>
        <view class="weui-form-preview__value">{{eventItem.fullDate}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">Time</view>
        <view class="weui-form-preview__value">{{eventItem.time}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">Deadline</view>
        <view class="weui-form-preview__value">{{eventItem.fullDeadline}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">Limit</view>
        <view class="weui-form-preview__value">{{eventItem.limit}} people</view>
      </view>
    </view>
              <!-- Before Sign Up: Button set to SignUp-->
    <button class=" weui-form-preview__btn weui-form-preview__btn_primary " type="primary" bindtap="sighUpBtnClick" disabled="true">Closed</button>

    <view class="weui-media-box">
      <view wx:if="{{eventItem.pic._url != null}}" class="image_box">
        <view class="picPre">
          <image src="{{eventItem.pic._url}}" mode="aspectFit"></image>
        </view>
      </view>

    </view>



  </view>
</view>

<!-- Display volunteer list -->
<view class="page__desc">{{numPeopleJoined}} people have joined.</view>
<view class="weui-panel__bd">
  <block wx:if="{{volunteerList.length > 0}}">
    <view catchtap=''>
      <view class="weui-media-box weui-media-box_text" wx:for="{{volunteerList}}" wx:key="volunteerItem">
        <view class="weui-media-box__title weui-media-box__title_in-text"> {{index+1}}. {{item.realName}}
        </view>
        <view class="weui-media-box__desc">{{item.phone}}</view>
        <view class="weui-media-box__info">
          <view class="weui-media-box__info__meta weui-media-time">Date：{{item.updatedAt}}</view>
        </view>
      </view>
    </view>
  </block>
  <block wx:else>
    <view class="weui-media-box weui-media-box_text">
      <view class="weui-media-box__title weui-media-box__title_in-text">
        暂无内容</view>
      <view class="weui-media-box__desc"></view>
    </view>
  </block>
</view>